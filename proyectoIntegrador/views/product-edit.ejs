<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include ('./partials/head') %>

<body>
		<!-- Header -->
		<% if (user != null) { %>
			<%- include('./partials/headerLogueado') %>
		<% } else { %>
			<%- include('./partials/header') %>
		<% } %>
		
		<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Editar productos</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<h2 class = "col-12"> 
			<form action="/product/edit" method="post">
		
				<div>
					<label for="nombre" class="form-label">Nombre del producto: </label>
					<input type="text" name="nombre" value="" class="form-input">
				</div>
		
				<div>
					<label for="descripcion" class="form-label">Descripcion del producto: </label>
					<input type="text" name="descripcion" value="" class="form-input">
				</div>
		
				<div>
					<button type="submit" name="enviar" class="form-input">Guardar cambios del producto</button>
				</div>
		
			</form>


	<!-- footer -->
	<%- include ('./partials/footer') %>
	<!-- /footer -->
</body>

</html>