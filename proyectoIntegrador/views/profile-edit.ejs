<!DOCTYPE html>
<html lang="es">

<%- include ('./partials/head.ejs') %>

<body>
		<!-- Header -->
		<% if (user != null) { %>
			<%- include('./partials/headerLogueado') %>
		<% } else { %>
			<%- include('./partials/header') %>
		<% } %>
		
		<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Editar mi perfil</h2>
			</div>
			<!-- Show the "ultimos" products -->

			<form action="/users/profile" method="get">

				<div>
					<label for="nombre" class="form-label">Editar nombre: </label>
					<input type="text" name="nombre" value="" class="form-input">
				</div>
		
				<div>
					<label for="apellido" class="form-label">Editar apellido: </label>
					<input type="text" name="apellido" value="" class="form-input">
				</div>

				<div>
					<label for="usuario" class="form-label">Editar usuario: </label>
					<input type="text" name="usuario" value="" class="form-input">
				</div>
				
				<div>
					<label for="email" class="form-label">Editar email: </label>
					<input type="email" name="email" value="" class="form-input">
				</div>
		
				<div>
					<label for="password" class="form-label">Nueva contraseña: </label>
					<input type="password" name="password" value="" class="form-input">
				</div>
		
				<div>
					<label for="nacimiento" class="form-label">Editar fecha de nacimiento: </label>
					<input type="date" name="nacimiento" value="" class="form-input">
				</div>
		
				<div>
					<label for="dni" class="form-label">Editar número de documento: </label>
					<input type="number" name="dni" value="" class="form-input">
				</div>
		
				<div>
					<label for="avatar" class="form-label">Cambiar foto de perfil: </label>
					<input type="file" name="avatar" value="" class="form-input">
				</div>
		
				<div>
					<button type="submit" name="enviar" class="form-input">Guardar cambios</button>
				</div>
		
		
			</form>
		</div>
	</div>

	<!-- footer -->
	<%- include ('./partials/footer.ejs') %>
	<!-- /footer -->
</body>

</html>