<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include ('./partials/head') %>

<body>
	<!-- Header -->
	<%- include ('./partials/headerLogueado') %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Editar mi perfil</h2>
			</div>
			<!-- Show the "ultimos" products -->

			<form action="/users/profile" method="get">

				<div>
					<label for="nombre" class="">Editar nombre: </label>
					<input type="text" name="nombre" value="" class="">
				</div>
		
				<div>
					<label for="apellido" class="">Editar apellido: </label>
					<input type="text" name="apellido" value="" class="">
				</div>
					
				<div>
					<label for="email" class="">Editar email: </label>
					<input type="email" name="email" value="" class="">
				</div>
		
				<div>
					<label for="password" class="">Nueva contraseña: </label>
					<input type="password" name="password" value="" class="">
				</div>
		
				<div>
					<label for="nacimiento" class="">Editar fecha de nacimiento: </label>
					<input type="date" name="nacimiento" value="" class="">
				</div>
		
				<div>
					<label for="dni" class="">Editar número de documento: </label>
					<input type="number" name="dni" value="" class="">
				</div>
		
				<div>
					<label for="avatar" class="">Cambiar foto de perfil: </label>
					<input type="file" name="avatar" value="" class="">
				</div>
		
				<div>
					<button type="submit" name="enviar" class="">Guardar cambios</button>
				</div>
		
		
			</form>
		
	<!-- footer -->
	<%- include ('./partials/footer') %>
	<!-- /footer -->
</body>

</html>