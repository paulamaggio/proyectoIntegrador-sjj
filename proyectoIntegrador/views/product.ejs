<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include ('./partials/head') %>
<body>
	<!-- Header -->
	<%- include ('./partials/header') %>
	<!-- /Header -->
	
	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"><%= data.nombreProducto %></h2> 
			<a href="/users/profile/<%= data.comentario.idUsuario %>"><p class="product-detail-description">Publicado por: <%= data.productoUsuario.email %></p></a>
			<!-- <p class="product-detail-description">
				<a href="/product/add">Editar</a>
			</p> -->
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="<%= data.fotoProducto %>" alt="" class="product-detail-img">
					<p class="product-detail-description"><%= data.descripcion %></p>
				</article>

				<!-- Comentarios -->
                <div class="col-12 col-lg-4">
                    <section class="comments">
                        <% for( let i = 0; i < data.comentario.length; i++ ) { %>
                            <article>
                                <img src="<%= data.productoUsuario.fotoPerfil %>" alt="">
                                <div class="data">
                                    <p class="user">
                                    <strong> <a href="/users/profile"><%= data.comentario[i].nombreDeUsuario %></a> </strong>
                                     <%= data.comentario[i].comentario %></p>
                                </div>
                            </article>
                        <% } %>
                    </section>
                    <!-- /Comentarios -->


					<form class="form" action="/product" method="get">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
	<%- include ('./partials/footer') %>
	<!-- /footer -->

</body>	
</html>