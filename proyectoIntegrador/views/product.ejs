<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include ('./partials/head') %>
<body>
	<!-- Header -->
	<%- include ('./partials/header') %>
	<!-- /Header -->
	
	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"><%= data.productos[2].nombre %></h2> 
			<p class="product-detail-description">
				<a href="/product/add">Editar</a>
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="<%= data.productos[2].fotoProducto %>" alt="" class="product-detail-img">
					<p class="product-detail-description"><%= data.productos[2].descripcion %></p>
				</article>

				<!-- Comentarios -->
				<div class="col-12 col-lg-4">
					<section class="comments">
						<% for( let i = 0; i < data.comentarios.length; i++ ) { %>
							<article>
								<img src="https://via.placeholder.com/35" alt="">
								<div class="data">
									<p class="user">
									<strong> <a href="/users/profile"><%= data.comentarios[i].nombreDeUsuario %></a> </strong>
									 <%= data.comentarios[i].textoDeComentario %></p>
								</div>
							</article>
						<% } %>
					</section>
					<!-- /Comentarios -->

					<form class="form" action="" method="POST">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
	<%- include ('./partials/footer') %>
	<!-- /footer -->

</body>	
</html>