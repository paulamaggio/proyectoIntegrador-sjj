<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include ('./partials/head') %>

<body>
		<!-- Header -->
		<% if (user != null) { %>
			<%- include('./partials/headerLogueado') %>
		<% } else { %>
			<%- include('./partials/header') %>
		<% } %>
		
		<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="<%= data.fotoPerfil %>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"> <%= data.nombreUsuario  %> 
						<a href="/users/profile/edit">
							<i class= "fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li><%= data.email %></li>
						<li><%=data.productos.length%> productos</li>
						<li>1M seguidores</li>
						<li><%=data.comentarios.length%> comentarios </li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<% for( let i = 0; i < data.productos.length; i++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/<%= data.productos[i].id %>">
							<figure class="product-box_image">
								<img src= '<%= data.productos[i].fotoProducto %>' alt="cafetera moulinex">
							</figure>
							<article class="product-box_data">
								<h2> <%= data.productos[i].nombreProducto %></h2>
								<p> <%= data.productos[i].descripcion %></p>
								<p>Comentarios: <%= data.productos[i].comentarios.length %></p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
			
		</div>
	</div>
	<!-- /Mis productos -->


	<!-- footer -->
	<%- include ('./partials/footer') %>
	<!-- /footer -->
</body>	
</html>