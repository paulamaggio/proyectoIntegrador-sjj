<!DOCTYPE html>
<html lang="es">
	<%- include ('./partials/head') %>

<body>
	<!-- Header -->
	<% if (user != null) { %>
		<%- include('./partials/headerLogueado') %>
	<% } else { %>
		<%- include('./partials/header') %>
	<% } %>
	
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner">
		<img src="/images/banner.jpg" height=350px alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for( let i = 0; i < 8; i++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/idProduct/<%= data[i].id %>"> 
							<!-- /id/<%= data[i].id %> -->
							<figure class="product-box_image">
								<img src="<%= data[i].fotoProducto %>" alt="productos ET">
							</figure>
							<article class="product-box_data">
								<h2><%= data[i].nombreProducto %></h2>
								<p>Publicado por: <%= data[i].usuarios.nombreUsuario %></p>
								<p><%= data[i].descripcion %></p>
								<p>Comentarios: <%= data[i].comentarios.length %></p>
							</article>
						</a>
					</section>
				</div>
			
			<% } %>
			
		
	</div>
	<!-- /Novedades -->
	
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for( let i = 8; i < 12; i++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/idProduct/<%= data[i].id %>">
							<figure class="product-box_image">
								<img src="<%= data[i].fotoProducto %>" alt="productos ET">
							</figure>
							<article class="product-box_data">
								<h2><%= data[i].nombreProducto %></h2>
								<p>Publicado por: <%= data[i].usuarios.nombreUsuario %></p>
								<p><%= data[i].descripcion %></p>
								<p>Comentarios:  <%= data[i].comentarios.length %></p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
		</div>
	</div>
	<!-- /Más comentados -->


	<!-- footer -->
	<%- include ('./partials/footer') %>
	<!-- /footer -->
</body>	
</html>